    const indexSummary = `${pageTitle} (Covers: ${snippetTitles.slice(0, 3).join(', ')}${snippetTitles.length > 3 ? '...' : ''})`;

    try {
      // Write the markdown file
      fs.writeFileSync(absoluteFilePath, finalMarkdownContent);
      totalFilesCreated++;

