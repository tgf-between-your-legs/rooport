    result.outputs.forEach(output => {
      console.log(` - ${output.path} (${(output.size / 1024).toFixed(2)} KB)`);
    });
  } else {
    console.error("Build failed:");
    result.logs.forEach(log => console.error(log));
  }
} catch (e) {
